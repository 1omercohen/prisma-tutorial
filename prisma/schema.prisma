generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  MEMBER
  MANAGER
  ADMIN
}

model User {
  id         String     @id @default(cuid())
  first_name String
  last_name  String
  email      String     @unique
  password   String
  role       Role       @default(MEMBER)
  created_at DateTime   @default(now())
  Reporter   Reporter[]
  AssignTo   AssignTo[]
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String
  created_at  DateTime   @default(now())
  modified    DateTime   @updatedAt
  Reporter    Reporter[]
  AssignTo    AssignTo[]
}

model Reporter {
  task    Task   @relation(fields: [task_id], references: [id])
  task_id String
  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@id([task_id, user_id])
}

model AssignTo {
  task    Task   @relation(fields: [task_id], references: [id])
  task_id String
  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@id([task_id, user_id])
}
